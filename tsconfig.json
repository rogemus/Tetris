{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    "module": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
